{
  "name": "nokan-client",
  "version": "0.2.0",
  "description": "TypeScript SDK with React components for Nokan Taskboard Public API",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nokan",
    "taskboard",
    "api",
    "sdk",
    "client",
    "react",
    "typescript",
    "ticket-system",
    "support-portal"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sevastijan/nokan-taskboard"
  },
  "homepage": "https://github.com/sevastijan/nokan-taskboard#readme",
  "bugs": {
    "url": "https://github.com/sevastijan/nokan-taskboard/issues"
  },
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "react": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16"
  }
}
